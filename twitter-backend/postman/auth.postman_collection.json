      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  if (json.access_token) {",
                  "    pm.collectionVariables.set('jwt_token', json.access_token);",
                  "    if (json.user && json.user.role === 'admin') {",
                  "      pm.collectionVariables.set('admin_jwt_token', json.access_token);",
                  "    }",
                  "  }",
                  "  if (json.user && json.user.id) {",
                  "    pm.collectionVariables.set('user_id', json.user.id);",
                  "    if (!pm.collectionVariables.get('target_user_id')) {",
                  "      pm.collectionVariables.set('target_user_id', json.user.id);",
                  "    }",
                  "  }",
                  "  if (json.user && json.user.email) {",
                  "    pm.collectionVariables.set('user_email', json.user.email);",
                  "  }",
                  "  if (json.user && json.user.username) {",
                  "    pm.collectionVariables.set('user_username', json.user.username);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{user_username}}\",\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
